<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_fenxiao"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="@dimen/dimen_1"
    android:background="@color/nc_white">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="33dp"
         android:layout_marginTop="5dp"
         android:gravity="center"
         android:background="@color/nc_white"
         android:orientation="horizontal">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:gravity="center">

             <ImageView
                 android:id="@+id/fenxiao_logo"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:scaleType="fitXY"
                 android:background="@drawable/mian_logo"
                 android:layout_marginRight="6dp" />

             <TextView
                 android:id="@+id/fenxiao_title"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:lines="1"
                 android:textColor="#FF258F"
                 android:textSize="14dp"
                 android:text="直播"/>

         </LinearLayout>

         <Button
             android:id="@+id/fenxiao_more"
             style="@style/NCTextButtonSmall"
             android:layout_width="40dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="8dp"
             android:drawableRight="@drawable/main_right"
             android:text="更多"
             android:textSize="12dp"
             android:visibility="visible"
             android:textColor="#676767" />

     </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:visibility="visible"
           android:layout_marginLeft="5dp"
           android:orientation="vertical">

           <LinearLayout
               android:id="@+id/ll_zhibao1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="6dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/fengxiao_r_title_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:lines="1"
                   android:layout_marginTop="3dp"
                   android:textColor="#0B0B0B"
                   android:text="热门"/>

               <ImageView
                   android:layout_width="39dp"
                   android:layout_height="15dp"
                   android:scaleType="fitXY"
                   android:layout_marginLeft="5dp"
                   android:layout_marginTop="4dp"
                   android:src="@drawable/zhibo"/>

           </LinearLayout>
           <TextView
               android:id="@+id/fengxiao_r_brief_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#989898"
               android:textSize="12dp"
               android:lines="1"
               android:padding="3dp"
               android:text="护肤彩妆技能UP"/>

           <ImageView
               android:id="@+id/fengxiao_r_img_1"
               android:layout_width="match_parent"
               android:layout_height="113dp"
               android:scaleType="fitXY"
               android:layout_marginTop="5dp"
               />

       </LinearLayout>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_marginLeft="9dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_zhibao2"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fengxiao_r_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:lines="1"
                    android:layout_marginTop="3dp"
                    android:textColor="#0B0B0B"
                    android:text="热门"/>
                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/zhibo"/>

            </LinearLayout>
            <TextView
                android:id="@+id/fengxiao_r_brief_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#989898"
                android:lines="1"
                android:textSize="12dp"
                android:padding="3dp"
                android:text="护肤彩妆技能UP"/>

            <ImageView
                android:id="@+id/fengxiao_r_img_2"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="9dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_zhibao3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fengxiao_r_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:lines="1"
                    android:layout_marginTop="3dp"
                    android:textColor="#0B0B0B"
                    android:text="热门"/>
                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/zhibo"/>

            </LinearLayout>
            <TextView
                android:id="@+id/fengxiao_r_brief_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#989898"
                android:padding="3dp"
                android:lines="1"
                android:textSize="12dp"
                android:text="护肤彩妆技能UP"/>

            <ImageView
                android:id="@+id/fengxiao_r_img_3"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>