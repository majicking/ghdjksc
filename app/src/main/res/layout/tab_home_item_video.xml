<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_fenxiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            >

            <ImageView
                android:id="@+id/fenxiao_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/mian_logo"
                android:scaleType="fitXY" />

            <TextView
                android:layout_marginTop="@dimen/dimen_2"
                android:id="@+id/fenxiao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="直播"
                android:textColor="#FF258F"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/fenxiao_more"
            android:layout_height="20dp"
            android:background="@drawable/nc_icon_null"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:drawableRight="@drawable/main_right"
            android:text="更多"
            android:textColor="#676767"
            android:textSize="12dp"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="@dimen/dimen_3"
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/nc_white"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_zhibao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fengxiao_r_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:lines="1"
                        android:text="热门"
                        android:textColor="#0B0B0B"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/zhibo" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fengxiao_r_brief_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="3dp"
                    android:text="护肤彩妆技能UP"
                    android:textColor="#989898"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/fengxiao_r_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_margin="@dimen/dimen_1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/nc_white"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:contentPadding="5dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_zhibao2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fengxiao_r_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:lines="1"
                        android:text="热门"
                        android:textColor="#0B0B0B"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/zhibo" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fengxiao_r_brief_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="3dp"
                    android:text="护肤彩妆技能UP"
                    android:textColor="#989898"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/fengxiao_r_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/nc_white"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_zhibao3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fengxiao_r_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:lines="1"
                        android:text="热门"
                        android:textColor="#0B0B0B"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/zhibo" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fengxiao_r_brief_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="3dp"
                    android:text="护肤彩妆技能UP"
                    android:textColor="#989898"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/fengxiao_r_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>