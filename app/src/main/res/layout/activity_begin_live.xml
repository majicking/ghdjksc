<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/nc_bg"
    android:layout_height="match_parent">

    <include layout="@layout/app_common_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <TextView
            style="@style/NCFormText"
            android:text="直播标题："
            android:textColor="@color/nc_black"/>

        <EditText
            android:id="@+id/et_title"
            style="@style/NCFormEdit"
            android:textColorHint="#bfbfbf"
            android:hint="请输入标题"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_take_classification"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <TextView
            style="@style/NCFormText"
            android:text="直播分类："
            android:textColor="@color/nc_black"/>

        <TextView
            style="@style/NCFormText"
            android:id="@+id/tv_take_classification"
            android:textColorHint="#bfbfbf"
            android:hint="点击选择分类" />

    </LinearLayout>
    <TextView style="@style/NCLine1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/nc_bg"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_left_add_img"
            android:layout_width="115dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@drawable/applay_add_file"/>
        <TextView
            style="@style/NCFormText"
            android:text="封面图片"
            android:layout_marginTop="5dp"
            android:textColor="@color/nc_black"/>
    </LinearLayout>
    <TextView style="@style/NCLine1" />

    <TextView
        android:id="@+id/tv_box_applay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="开始直播"
        android:textColor="@color/nc_white"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_bg_applay"/>
</LinearLayout>