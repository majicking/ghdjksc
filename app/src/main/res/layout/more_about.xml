<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical">

    <include layout="@layout/app_common_header" />

    <RelativeLayout
        android:id="@+id/rl_"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50.0dip"
            android:contentDescription="TODO"
            android:src="@mipmap/logo" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/more_aboutus_appname"
                android:textColor="#6D6D6D"
                android:textSize="17.0sp" />

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:text="@string/more_aboutus_version"
                android:textColor="#6D6D6D"
                android:textSize="15.0sp" />
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">


            <TextView
                android:visibility="invisible"
                android:id="@+id/txt_copyright"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/app_copyright"
                android:textColor="#6D6D6D"
                android:textSize="10.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_copyright"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/app_copreserved"
                android:textColor="#6D6D6D"
                android:textSize="10.0sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>