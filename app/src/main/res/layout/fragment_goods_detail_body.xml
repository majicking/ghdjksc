<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:id="@+id/main_rl"
    tools:context="com.guohanhealth.shop.ui.type.GoodsDetailBodyFragment">

    <com.guohanhealth.shop.custom.MyScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.guohanhealth.shop.custom.MyWebView
                android:id="@+id/wvGoodsBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                </com.guohanhealth.shop.custom.MyWebView>

        </LinearLayout>
    </com.guohanhealth.shop.custom.MyScrollView>

    <Button
        android:id="@+id/top_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/top_btn_bg"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</RelativeLayout>
