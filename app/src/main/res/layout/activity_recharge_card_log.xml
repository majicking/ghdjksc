<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/app_common_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@color/nc_white">

            <Button
                android:id="@+id/btnRechargeCardLog"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/nc_combin_btn_left_bg"
                android:text="充值卡余额"
                android:textColor="@drawable/nc_btn_text_color" />

            <Button
                android:id="@+id/btnRechargeCardAdd"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/nc_combin_btn_right_bg"
                android:text="充值卡充值"
                android:textColor="@drawable/nc_btn_text_color" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/nc_pink"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:text="充值卡余额"
            android:textColor="@color/nc_white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvRechargeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/nc_white"
            android:textSize="16dp" />
    </RelativeLayout>

    <com.xinyuangongxiang.shop.custom.MyListEmpty
        android:id="@+id/myListEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.xinyuangongxiang.shop.custom.MyListEmpty>

    <com.xinyuangongxiang.shop.custom.XListView
        android:id="@+id/orderlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/nc_bg"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:scrollbars="none" />
    <ListView
        android:id="@+id/lvRechargeCardLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/nc_border"
        android:dividerHeight="1dp"></ListView>
</LinearLayout>